{
	"name": "obsidian-terminal",
	"displayName": "Terminal",
	"version": "1.0.0",
	"description": "Open terminals in Obsidian directly.",
	"main": "main.js",
	"scripts": {
		"dev": "node build/esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node build/esbuild.config.mjs production",
		"version": "node build/version-bump.mjs && git add manifest.json versions.json",
		"postversion": "node build/version-commit.mjs"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"terminal"
	],
	"author": "polyipseity",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.18.10",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.14.47",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	},
	"dependencies": {
		"xterm": "5.1.0",
		"xterm-addon-fit": "0.7.0"
	},
	"obsidian": {
		"minAppVersion": "1.1.9",
		"authorUrl": "",
		"fundingUrl": {},
		"isDesktopOnly": true
