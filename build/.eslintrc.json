{
	"env": {
		"node": true
	},
	"extends": [
		"eslint:all"
	],
	"parser": "espree",
	"parserOptions": {
		"allowReserved": false,
		"ecmaFeatures": {},
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"ignorePatterns": [],
	"plugins": [],
	"root": true,
	"rules": {
		"array-element-newline": [
			"error",
			"consistent"
		],
		"arrow-parens": [
			"error",
			"as-needed"
		],
		"brace-style": [
			"error",
			"1tbs",
			{
				"allowSingleLine": true
			}
		],
		"comma-dangle": [
			"error",
			"always-multiline"
		],
		"func-style": [
			"error",
			"declaration",
			{
				"allowArrowFunctions": true
			}
		],
		"function-call-argument-newline": [
			"error",
			"consistent"
		],
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": "off",
		"max-len": [
			"error",
			{
				"code": 80,
				"tabWidth": 2,
				"ignorePattern": "eslint-disable",
				"ignoreUrls": true,
				"ignoreStrings": true,
				"ignoreTemplateLiterals": true,
				"ignoreRegExpLiterals": true
			}
		],
		"max-params": "off",
		"multiline-ternary": [
			"error",
			"always-multiline"
		],
		"no-console": "off",
		"no-magic-numbers": [
			"error",
			{
				"ignore": [
					-1,
					0,
					1,
					10,
					100,
					1000
				]
			}
		],
		"no-tabs": [
			"error",
			{
				"allowIndentationTabs": true
			}
		],
		"no-ternary": "off",
		"object-curly-spacing": [
			"error",
			"always"
		],
		"one-var": [
			"error",
			"consecutive"
		],
		"padded-blocks": [
			"error",
			"never"
		],
		"quote-props": [
			"error",
			"as-needed",
			{
				"keywords": true,
				"unnecessary": true,
				"numbers": true
			}
		],
		"semi": [
			"error",
			"never",
			{
				"beforeStatementContinuationChars": "always"
			}
		],
		"sort-vars": "off",
		"space-before-function-paren": [
			"error",
			{
				"anonymous": "never",
				"named": "never",
				"asyncArrow": "always"
			}
		]
	}
}